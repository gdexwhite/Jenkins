pipeline {
  agent any
  stages {
    stage('Git Checkout') {
	  steps {
	    git branch: 'main', url: 'https://github.com/olaoruku007/tomcat9.git'
	  }
	}
	
	stage('Run Ansible Playbook Role') {
	  steps {
	    ansiblePlaybook colorized: true, credentialsId: 'Ansible', installation: 'ansible_auto', inventory: '/home/tomcat/.jenkins/workspace/Ansible-Auto-Pipeline/hosts', playbook: '/home/tomcat/.jenkins/workspace/Ansible-Auto-Pipeline/playbook_roles.yml'
	  }
	}				
	
  }
}




